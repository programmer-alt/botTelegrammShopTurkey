{
  "compilerOptions": {
    "target": "ES6", // Используем самую современную версию JavaScript
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./src/dist", // Папка для скомпилированных файлов
    "rootDir": "./", // Корневая папка исходных файлов
    "strict": true,
    "sourceMap": true, // Включаем sourcemaps для отладки
    "esModuleInterop": true, // Разрешаем совместимость �� CommonJS
    "resolveJsonModule": true, // Разрешаем импорт JSON файлов
    "skipLibCheck": true, // Пропускаем проверку типов в библиотеках
    "forceConsistentCasingInFileNames": true, // Убедитесь, что регистр файлов согласован
    "types": ["node", "node-telegram-bot-api"] // Типы для Node.js и Telegram API
  },
  "include": ["src/**/*"], // Включаем все файлы из папки src и common
  "exclude": ["node_modules"] // Исключаем ненужные папки
}
